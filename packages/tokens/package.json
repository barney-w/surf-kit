{
  "name": "@surf-kit/tokens",
  "version": "0.1.3",
  "description": "Design tokens for surf-kit â€” colors, spacing, typography as CSS, JSON, and TypeScript",
  "keywords": [
    "design-tokens",
    "css-variables",
    "style-dictionary",
    "dtcg",
    "theming"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "main": "dist/ts/tokens.js",
  "types": "dist/ts/tokens.d.ts",
  "exports": {
    "./css": "./dist/css/variables.css",
    "./css/light": "./dist/css/variables-light.css",
    "./css/dark": "./dist/css/variables-dark.css",
    "./css/brand": "./dist/css/variables-brand.css",
    "./ts": {
      "types": "./dist/ts/tokens.d.ts",
      "default": "./dist/ts/tokens.js"
    },
    "./json": "./dist/json/tokens.json",
    ".": "./dist/ts/tokens.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/barney-w/surf-kit.git",
    "directory": "packages/tokens"
  },
  "homepage": "https://github.com/barney-w/surf-kit#readme",
  "bugs": {
    "url": "https://github.com/barney-w/surf-kit/issues"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsx src/config.ts",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "style-dictionary": "^4.0.0",
    "tsx": "catalog:",
    "@surf-kit/tsconfig": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}

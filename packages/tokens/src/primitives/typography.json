{
  "font": {
    "family": {
      "$type": "fontFamily",
      "sans": { "$value": "Inter, system-ui, -apple-system, sans-serif" },
      "mono": { "$value": "JetBrains Mono, Fira Code, monospace" },
      "display": { "$value": "'Space Grotesk', system-ui, sans-serif" }
    },
    "size": {
      "$type": "dimension",
      "xs": { "$value": "12px" },
      "sm": { "$value": "14px" },
      "base": { "$value": "16px" },
      "lg": { "$value": "18px" },
      "xl": { "$value": "20px" },
      "2xl": { "$value": "24px" },
      "3xl": { "$value": "30px" },
      "4xl": { "$value": "36px" }
    },
    "weight": {
      "$type": "fontWeight",
      "normal": { "$value": "400" },
      "medium": { "$value": "500" },
      "semibold": { "$value": "600" },
      "bold": { "$value": "700" }
    },
    "lineHeight": {
      "$type": "dimension",
      "tight": { "$value": "1.25" },
      "normal": { "$value": "1.5" },
      "relaxed": { "$value": "1.75" }
    }
  }
}
